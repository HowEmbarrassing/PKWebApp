@{
    Layout = "_MasterLayout";
}
<!--   Top Header/First Parallax Container  -->
<header>
    <nav class="white" role="navigation">
        <div class="nav-wrapper container">
            <a id="logo-container" asp-controller="Home" asp-action="index" class="brand-logo">
                <img class="pk-icon" src="~/img/logo.svg" alt="logo" />
                <h4 id="companyName" class="right hide-on-med-and-down">PIRANDELLO/KRUGER</h4>
            </a>
            <ul class="right hide-on-med-and-down">
                <li><a asp-controller="Home" asp-action="index">Home Page</a></li>
                <li><a asp-controller="Home" asp-action="login">Login</a></li>
                <li><a asp-controller="Home" asp-action="contact">Contact</a></li>
                <li><a asp-controller="Home" asp-action="privacy">Privacy</a></li>
            </ul>

            <ul id="nav-mobile" class="sidenav">
                <li><a asp-controller="Home" asp-action="index">Home Page</a></li>
                <li><a asp-controller="Home" asp-action="login">Login</a></li>
                <li><a asp-controller="Home" asp-action="contact">Contact</a></li>
                <li><a asp-controller="Home" asp-action="privacy">Privacy</a></li>
            </ul>
            <a href="#" data-target="nav-mobile" class="sidenav-trigger"><i class="material-icons orange-text">menu</i></a>
        </div>
    </nav>

    <div id="index-banner" class="parallax-container">
        <div class="section no-pad-bot">
            <div class="container">
                <br><br>
                <h1 class="header center teal-text text-lighten-2">@ViewData["Title"]</h1>
                <div class="row center">
                    <h5 class="header col s12 light">A modern responsive front-end framework based on Material Design</h5>
                </div>
                <div class="row center">
                    <a href="http://materializecss.com/getting-started.html" id="download-button" class="btn-large waves-effect waves-light orange lighten-1">HIRE US NOW</a>
                </div>
                <br><br>

            </div>
        </div>
        <div class="parallax"><img src="img/pk1.jpg" alt="Unsplashed background img 1"></div>
    </div>
</header>

<!--   Content Page (Home, Login, Register, About etc.)  -->
<div class="content-page">
    @RenderBody()
</div>


<!--   Footer  -->

<footer class="page-footer orange">
    <div class="container">
        <div class="row">
            <div class="col l6 s12">
                <h5 class="white-text">Company Bio</h5>
                <p class="grey-text text-lighten-4">We are a team of college students working on this project like it's our full time job. Any amount would help support and continue development on this project and is greatly appreciated.</p>


            </div>
            <div class="col l3 s12">
                <h5 class="white-text">Settings</h5>
                <ul>
                    <li><a class="white-text" href="#!">Link 1</a></li>
                    <li><a class="white-text" href="#!">Link 2</a></li>
                    <li><a class="white-text" href="#!">Link 3</a></li>
                    <li><a class="white-text" href="#!">Link 4</a></li>
                </ul>
            </div>
            <div class="col l3 s12">
                <h5 class="white-text">Connect</h5>
                <ul>
                    <li><a class="white-text" href="#!">Link 1</a></li>
                    <li><a class="white-text" href="#!">Link 2</a></li>
                    <li><a class="white-text" href="#!">Link 3</a></li>
                    <li><a class="white-text" href="#!">Link 4</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="footer-copyright">
        <div class="container">
            <div>Made by <a class="brown-text text-lighten-3" href="http://materializecss.com">Materialize</a></div>
            <div class="text-center">Copyright 2020 Pirandello Kruger Ltd.</div>
        </div>
    </div>
</footer>

<!--Scripts-->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="js/materialize.js"></script>
<script src="js/init.js"></script>
@RenderSection("Scripts", required: false)
