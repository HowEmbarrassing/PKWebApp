@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form id="loginForm">
            <div class="form-group">
                <div>
                    <label asp-for="Username">Username</label>
                    <input asp-for="Username" />
                    <span class="text-warning" asp-validation-for="Username"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password"/>
                <span class="text-warning" asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" asp-for="RememberMe" type="checkbox" />
                    <label class="form-check-label" asp-for="RememberMe">Remember Me?</label>
                </div>
                <span class="text-warning" asp-validation-for="RememberMe"></span>
            </div>
            <div class="form-group">
                <input value="Login" type="submit" class="btn-warning rounded"/>
            </div>
        </form>
    </div>
</div>