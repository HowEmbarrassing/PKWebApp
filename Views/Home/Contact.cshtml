@model ContactViewModel
@{
    ViewData["Title"] = "Contact";
}
@section Scripts {
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>"
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>"
}
<div class="container-sm my-5 mx-auto w-50 border border-warning rounded">
    <form method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <label asp-for="Name">Your Name:</label>
        <input asp-for="Name" class="form-control" />
        <br />
        <span asp-validation-for="Name"></span>
        <label asp-for="Email">Email:</label>
        <input asp-for="Email" type="email" />
        <span asp-validation-for="Email"></span>
        <br />
        <label asp-for="Subject">Subject:</label>
        <input asp-for="Subject" type="text" />
        <span asp-validation-for="Subject"></span>
        <br />
        <label asp-for="Message">Message:</label>
        <textarea asp-for="Message" rows="4"></textarea>
        <span asp-validation-for="Message"></span>
        <br />
        <input type="submit" value="Send Message" />
        <div>@ViewBag.UserMessage</div>
    </form>
</div>